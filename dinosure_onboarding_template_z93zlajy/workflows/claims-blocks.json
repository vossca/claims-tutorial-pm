[
  {
      "block": {
          "key": "team_handling_the_claim",
          "type": "dropdown",
          "title": "Which team is currently handling the claim?",
          "options": [
              {
                  "key": "team_alpha",
                  "value": "Team Alpha"
              },
              {
                  "key": "team_beta",
                  "value": "Team Beta"
              }
          ],
          "default_value": "team_alpha"
      }
  },
  {
      "block": {
          "key": "bank_details_bank",
          "type": "dropdown",
          "title": "Bank name",
          "options": [
              {
                  "key": "ABSA",
                  "value": "absa"
              },
              {
                  "key": "Capitec",
                  "value": "capitec"
              },
              {
                  "key": "FNB",
                  "value": "fnb"
              },
              {
                  "key": "Investec",
                  "value": "investec"
              },
              {
                  "key": "Nedbank",
                  "value": "nedbank"
              },
              {
                  "key": "Postbank",
                  "value": "postbank"
              }
          ],
          "default_value": "ABSA"
      },
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  },
  {
      "block": {
          "key": "bank_details_branch_code",
          "type": "input.text",
          "title": "Branch code",
          "placeholder": "123456"
      },
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  },
  {
      "block": {
          "key": "bank_details_account_type",
          "type": "dropdown",
          "title": "Account type",
          "options": [
              {
                  "key": "cheque_account",
                  "value": "Cheque account"
              },
              {
                  "key": "savings_account",
                  "value": "Savings account"
              }
          ],
          "default_value": "cheque_account"
      },
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  },
  {
      "block": {
          "key": "bank_details_account_number",
          "type": "input.text",
          "title": "Account number",
      },
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  },
  {
      "block": {
          "key": "password",
          "type": "input.text",
          "title": "Password"
      },
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  },
  {
      "block": {
          "key": "confirm_password",
          "type": "radio",
          "title": "Confirm password?",
          "options": [
              {
                  "key": "yes",
                  "value": "Yes"
              },
              {
                  "key": "no",
                  "value": "No"
              }
          ],
          "description": " ",
          "default_value": "no"
      },
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  },
  {
      "block": {
          "key": "payout_request",
          "type": "payout_request",
          "payee": {
              "type": "policyholder",
              "amount": ""{{ claim.policy.sum_assured }}",
              "percentage": 100,
              "payment_details": {
                  "type": "eft",
                  "details": {
                      "bank_name": "{{ claim.block_states.claim_payout_details_bank_name_dropdown.option_value }}",
                      "branch_code": "{{ claim.block_states.claim_payout_details_branch_code.value }}",
                      "account_type": "{{ claim.block_states.claim_payout_details_account_type_dropdown.option_key }}",
                      "account_number": "{{ claim.block_states.claim_payout_details_account_number.value }}"
                  }
              },
              "policyholder_id": "{{ claim.policy.policyholder_id }}"
          },
          "title": "Payout request",
          "amount": "{{ claim.policy.sum_assured }}",
          "description": "Example payout request"
      },
      "show_if": "{{ifCondition (ifCondition claim.app_data '!=='  null) '&&' (ifCondition claim.app_data.password_valid '==='  true)}}",
      "disabled_if": "{{ifCondition claim.block_states.team_handling_the_claim.option_key '==='  'team_beta'}}"
  }
]
