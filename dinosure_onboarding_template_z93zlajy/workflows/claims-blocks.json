[
  {
      "block": {
          "key": "beneficiary_id",
          "type": "input.text",
          "title": "Beneficiary ID"
      }
  },
    {
      "block": {
          "key": "start_verification_process",
          "type": "radio",
          "title": "Would you like to start the beneficiary ID verification process?",
          "options": [
              {
                  "key": "yes",
                  "value": "Yes"
              },
              {
                  "key": "no",
                  "value": "No"
              }
          ],
          "description": " ",
          "default_value": "no"
      }
  },
  {
      "block": {
          "key": "beneficiary_id_verification_status",
          "type": "radio",
          "title": "Benificiary ID verification status",
          "options": [
              {
                  "key": "verification_initiated",
                  "value": "Verification initiated"
              },
              {
                  "key": "processing",
                  "value": "Processing"
              },
              {
                  "key": "complete",
                  "value": "Complete"
              }
          ],
          "description": " ",
          "default_value": "complete"
      },
      "disabled_if": "true"
  },
  {
      "block": {
          "key": "beneficiary_id_verification_response",
          "type": "input.text",
          "title": "Beneficiary ID"
      },
      "hide_if": "true"
  },
  {
      "block": {
          "key": "beneficiary_id_success_alert",
          "type": "alert",
          "color": "success",
          "markdown": "{{ claim.app_data.beneficiary_id_verification.message }}"
      },
      "show_if": "{{ifCondition (ifCondition claim.app_data '!=='  null) '&&' (ifCondition claim.app_data.beneficiary_id_verification.status '==='  'exists')}}"
  },
  {
      "block": {
          "key": "beneficiary_id_error_alert",
          "type": "alert",
          "color": "danger",
          "markdown": "Error: {{ claim.app_data.beneficiary_id_verification.message }}"
      },
      "show_if": "{{ifCondition (ifCondition claim.app_data '!=='  null) '&&' (ifCondition claim.app_data.beneficiary_id_verification.status '!=='  'exists')}}"
  }
]
