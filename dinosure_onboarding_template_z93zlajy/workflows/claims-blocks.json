  [
    {
      "block": {
          "key": "who_will_be_paid_out",
          "type": "radio",
          "title": "Who will be paid out?",
          "options": [
              {
                  "key": "policyholder",
                  "value": "Policyholder"
              },
              {
                  "key": "first_beneficiary",
                  "value": "First beneficiary"
              }
          ],
          "description": " ",
          "default_value": "first_beneficiary"
      }
  },
  {
      "block": {
          "key": "initiate_prefill_bank_details",
          "type": "radio",
          "title": "Prefill bank details:",
          "options": [
              {
                  "key": "retrieve_bank_details",
                  "value": "Retrieve bank details"
              },
              {
                  "key": "complete",
                  "value": "Complete"
              }
          ],
          "description": " ",
          "default_value": "complete"
      }
  },
  {
      "block": {
          "key": "bank_details_bank",
          "type": "dropdown",
          "title": "Bank name",
          "options": [
              {
                  "key": "ABSA",
                  "value": "absa"
              },
              {
                  "key": "Capitec",
                  "value": "capitec"
              },
              {
                  "key": "FNB",
                  "value": "fnb"
              },
              {
                  "key": "Investec",
                  "value": "investec"
              },
              {
                  "key": "Nedbank",
                  "value": "nedbank"
              },
              {
                  "key": "Postbank",
                  "value": "postbank"
              }
          ],
          "default_value": "ABSA"
      }
  },
  {
      "block": {
          "key": "bank_details_branch_code",
          "type": "input.text",
          "title": "Branch code",
          "placeholder": "123456"
      }
  },
  {
      "block": {
          "key": "bank_details_account_type",
          "type": "dropdown",
          "title": "Account type",
          "options": [
              {
                  "key": "cheque_account",
                  "value": "Cheque account"
              },
              {
                  "key": "savings_account",
                  "value": "Savings account"
              }
          ],
          "default_value": "cheque_account"
      }
  },
  {
      "block": {
          "key": "bank_details_account_number",
          "type": "input.text",
          "title": "Account number"
      }
  },
  {
      "block": {
          "key": "payout_request_policyholder",
          "type": "payout_request",
          "payee": {
              "type": "policyholder",
              "amount": "{{ claim.policy.sum_assured }}",
              "percentage": 100,
              "payment_details": {
                  "type": "eft",
                  "details": {
                      "bank_name": "{{ claim.block_states.claim_payout_details_bank_name_dropdown.option_value }}",
                      "branch_code": "{{ claim.block_states.claim_payout_details_branch_code.value }}",
                      "account_type": "{{ claim.block_states.claim_payout_details_account_type_dropdown.option_key }}",
                      "account_number": "{{ claim.block_states.claim_payout_details_account_number.value }}"
                  }
              },
              "policyholder_id": "{{ claim.policy.policyholder_id }}"
          },
          "title": "Payout request",
          "amount": "{{ claim.policy.sum_assured }}",
          "description": "Example payout request"
      },
      "show_if": "{{ifCondition claim.block_states.who_is_deceased.option_key '===' 'true'}}"
  },
  {
      "block": {
          "key": "payout_request_beneficiary",
          "type": "payout_request",
          "payee": {
              "type": "beneficiary",
              "amount": "{{ claim.policy.sum_assured }}",
              "percentage": 100,
              "payment_details": {
                  "type": "eft",
                  "details": {
                      "bank_name": "{{ claim.block_states.claim_payout_details_bank_name_dropdown.option_value }}",
                      "branch_code": "{{ claim.block_states.claim_payout_details_branch_code.value }}",
                      "account_type": "{{ claim.block_states.claim_payout_details_account_type_dropdown.option_key }}",
                      "account_number": "{{ claim.block_states.claim_payout_details_account_number.value }}"
                  }
              },
              "last_name": "{{ claim.policy.beneficiaries.0.first_name }}",
              "first_name": "{{ claim.policy.beneficiaries.0.last_name }}"
          },
          "title": "Payout request",
          "amount": "{{ claim.policy.sum_assured }}",
          "description": "Example payout request"
      },
      "show_if": "{{ifCondition claim.block_states.who_is_deceased.option_key '===' 'true'}}"
  }
]
